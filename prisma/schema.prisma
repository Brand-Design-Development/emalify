// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Lead {
    id              String   @id @default(cuid())
    fullName        String
    email           String
    phoneNumber     String
    company         String
    currentPosition String
    submissionDate  DateTime
    label           String // "High Budget Lead" | "Medium Budget Lead" | "Low Budget Lead"
    progress        String // "Form Submitted" | "Demo Call Booked" | "Dead Lead" | "Potential Lead" | "Converted"
    threadId        String   @unique
    formMode        String
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt

    @@index([email])
    @@index([label])
    @@index([progress])
    @@index([submissionDate])
}
